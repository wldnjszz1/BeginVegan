<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="askMapper">

    <resultMap id="askUser" type="com.bitacademy.wannavegan.askVO.AskVO">
        <result property="id" column="id" />
        <result property="title" column="title"/>
        <result property="userId" column="user_id"/>
        <result property="created" column="created"/>
    </resultMap>
    
    <!--문의 게시판 전체 게시글 조회-->
    <select id="selectAll" resultMap="askUser">
        <![CDATA[
            SELECT ask_boards.id, ask_boards.title, users.user_id, to_char(created, 'yyyy-mm-dd') as created
			FROM ask_boards, users
			WHERE ask_boards.author=users.id
			ORDER BY id DESC
		]]>
    </select>
</mapper>